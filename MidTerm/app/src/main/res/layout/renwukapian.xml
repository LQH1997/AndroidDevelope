<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="200dp"
    android:layout_height="match_parent"
    android:weightSum="2">
    <ImageView
        android:id="@+id/personPic"
        android:layout_width="199dp"
        android:layout_height="241dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/shili1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="蜀"
        app:layout_constraintBottom_toTopOf="@+id/name1"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="@+id/personPic"
        app:layout_constraintRight_toRightOf="@+id/personPic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刘 备"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/personPic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/personPic"
        app:layout_constraintBottom_toBottomOf="@+id/personPic"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="12dp"
        android:id="@+id/name1" />

</android.support.constraint.ConstraintLayout>